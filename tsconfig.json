{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
